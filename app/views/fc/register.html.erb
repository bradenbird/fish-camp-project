<!-- Register page -->

<html>
  <head>
    <title>Fish Camp Registration</title>
  </head>

  <body>
    <div class = "header">
      <p style="text-align:right">
        <% if current_user %>
          Signed in as <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
          <br>
          Please use a valid TAMU Google login.
        <% end %>
      </p>
    </div>

    <div class="body">
    <div class = "title">
      <br>
      <h style="font-size:300%">&emsp;&#x1F41F Fish Camp Registration</h>
      <br><br>
    </div>
    <div>
    <%= yield %>
    </div>
    <ul class = "bar">
      <li class = "bar"><%= link_to 'Home', home_path %></li>
      <li class = "bar"><%= link_to "Register Now", register_path %></li>
      <li class = "bar"><%= link_to 'FC Profile', profile_path %></li>
      <% if current_user %>
        <% if (current_user.role == 'admin' || current_user.role == 'chair') %>
          <li class = "bar"><%= link_to 'Applicant Database', applicants_path %></li>
        <% end %>
      <% end %>
      <% if current_user %>
        <% if (current_user.role == 'admin') %>
          <li class = "bar"><%= link_to 'Admin Console', admin_path %>
        <% end %>
      <% end %>
    </ul>
    <br>
    <section>
      <h2>Registration Currently Open</h2>
      <h3>Co-Chair Registration</h3>
      <p><b>Co-Chair Registration is now open!</b> Click the button below to begin registration.
      <p><button>
        <%= link_to "HOME", home_path %>
      </button></p>
    </section>
    <section>
      <h2>Closed Registration Types</h2>
      <h3>Freshman Registration</h3>
      <p>This registration type is open from May 21, 2018 3:00pm to Jun 11, 2018 3:00pm.</p>
      <h3>Counselor Phase 1 Registration</h3>
      <p>This registration type is open from Jan 19, 2016 3:00pm to May 7, 2017 3:00pm.</p>
      <h3>Counselor Phase 2 Registration</h3>
      <p>This registration type is open from Mar 6, 2015 3:00pm to May 7, 2017 3:00pm.</p>
      <h3>Director Registration</h3>
      <p>This registration type is open from Jan 26, 2018 3:00pm to Jan 28, 2018 3:00pm.</p>
    </section>
    <br>
    </div>
    <div class = "footer">
      <h3>Operated by <a href="http://fishcamp.tamu.edu/">Fish Camp</a> at <a href="http://www.tamu.edu/">Texas A&#38;M University</a>
      <br>
      Hosted by <a href="http://studentactivities.tamu.edu/IT">Student Activities</a> &middot; <a href="http://studentactivities.tamu.edu/site_policies">Site Policies</a></h3>
    </div>
    <br>
  </body>
</html>