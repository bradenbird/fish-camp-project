<!-- Redirect Login Page -->

<html>
  <head>
    <title>Fish Camp Registration</title>
  </head>

  <body>
  <div class = "title">
      <p style="text-align:right">
        <% if current_user %>
          Signed in as <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
          <br>
          Please use a valid TAMU Google login.
        <% end %>
      </p>
      <h style="font-size:300%">&#x1F41F Fish Camp Homepage</h>
      <br><br><br>
    </div>
    <div class="body">
    <ul class = "bar">
      <li class = "bar"><%= link_to 'Home', home_path %>
      &emsp;
      <li class = "bar"><%= link_to "Register Now", login_path(:reqpath => 'register') %>
      &emsp;
      <li class = "bar"><%= link_to 'FishCamp Profile', login_path(:reqpath => 'profile') %>
      &emsp;
      <% if current_user %>
      <li class = "bar"><%= link_to 'Applicant Database', applicants_path %>
      <% end %>
    </ul>
    <div class="redirect">
      <% if current_user %>
        <!-- Redirect to the page originally requested -->
        Error redirecting you to the requested page. Press
        <%= link_to "here", home_path %>
        to return to the home page.
      <% else %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
        <br>
        Please use a valid TAMU Google login.
      <% end %>
    </div>
    </div>
  </body>
</html>