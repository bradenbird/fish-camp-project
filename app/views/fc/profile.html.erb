<!-- Profile page -->

<html>
  <head>
    <title>Fish Camp Profile</title>
  </head>

  <body>
    <div>
      <p style="text-align:right">
        <% if current_user %>
          Signed in as <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
          <br>
          Please use a valid TAMU Google login.
        <% end %>
      </p>
    </div>
    <div>
    <%= yield %>
    </div>
    <h1 style="font-size:300%">Fish Camp Homepage</h1>
    <%= link_to 'Home', home_path %>
    &emsp;
    <%= link_to 'Register Now', register_path %>
    &emsp;
    <%= link_to 'FishCamp Profile', profile_path %>
    <br>
    <h1>Fish Camp Profile</h1>
    <br>
    <hr>
    <section>
      <h2>Hello, <strong><%= current_user.name %></strong></h2>
      <br>
      <h3>Your current profile information:</h3>
      <br>
      <p>Name: <strong><%= current_user.name %></strong></p>
      <p>UIN: <strong><%= current_user.uin %></strong></p>
      <p>Email: <strong><%= current_user.email %></strong></p>
      <p>Role: <strong><%= current_user.role %></strong></p>
    </section>
  </body>
</html>